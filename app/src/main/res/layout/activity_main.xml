<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binds="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="student" type="com.xlw.android.demo.Student"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{student.click}">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{student.getName()}"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{student.getAddr()}"
            />

       <!-- <ListView
            android:id="@+id/mListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>-->

        <!--<include layout="@layout/phone_layout"
            binds:student="@{student}"/>-->


    </LinearLayout>
</layout>